<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>

    <!-- Google font (optional) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap (if not already included) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="" crossorigin="anonymous" />

    <!-- Your site stylesheet -->
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-app">
        <nav class="app-nav">
            <div class="app-brand">
                <img src="~/images/logo.png" alt="logo" />
                ExpenseTracker
            </div>

            <div class="app-links">
                <a asp-controller="Expenses" asp-action="Index">Expenses</a>
                <a asp-controller="Expenses" asp-action="Summary">Summary</a>
                <a asp-controller="Categories" asp-action="Index">Categories</a>
            </div>
        </nav>

        <main>
            @RenderBody()
        </main>

        <footer class="app-footer">
            Made with ❤️ — ExpenseTracker
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
